# NOC Toolkit Production Configuration
# Copy this file to .env and configure your settings
# NEVER commit .env to version control

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Flask secret key for session management (REQUIRED)
# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=CHANGE-ME-generate-a-real-secret-key

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application port (default: 5000)
APP_PORT=5000

# Application version label
APP_VERSION=v2.0

# Gunicorn workers (default: auto-calculated based on CPU cores)
# GUNICORN_WORKERS=4
# GUNICORN_THREADS=4

# Log level (debug, info, warning, error, critical)
LOG_LEVEL=info

# =============================================================================
# DATA SETTINGS
# =============================================================================

# Database file location (default: /opt/noc-toolkit/data/noc_toolkit.db)
NOC_TOOLKIT_DB_PATH=/opt/noc-toolkit/data/noc_toolkit.db

# Data directory for app data
NOC_TOOLKIT_DATA_DIR=/opt/noc-toolkit/data

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Encryption key for stored device credentials (auto-generated if not set)
# Generate with: python3 -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# NOC_ENCRYPTION_KEY=

# WLC Dashboard encryption key (auto-generated if not set)
# WLC_DASHBOARD_KEY=
