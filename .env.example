# NOC Toolkit Environment Configuration
# Copy this file to .env and configure your settings
# NEVER commit .env to version control

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Flask secret key for session management (REQUIRED in production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-super-secret-key-change-me

# PostgreSQL password (REQUIRED)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(24))"
POSTGRES_PASSWORD=your-postgres-password-change-me

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# Application port (default: 5000)
APP_PORT=5000

# Flask environment (development/production)
FLASK_ENV=production

# PostgreSQL settings
POSTGRES_USER=noc_toolkit
POSTGRES_DB=noc_toolkit

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Encryption key for stored credentials (auto-generated if not set)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# NOC_ENCRYPTION_KEY=

# Initial admin password (only used on first run if no users exist)
# Leave empty to use default 'admin123' - CHANGE IMMEDIATELY after first login
# NOC_ADMIN_PASSWORD=

# WLC Dashboard encryption key (auto-generated if not set)
# WLC_DASHBOARD_KEY=
